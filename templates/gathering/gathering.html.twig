{% extends 'base.html.twig' %}

{% block title %}Rassemblement n°{{ gathering }}
{% endblock %}

{% block body %}

	<div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2 display-4 text-white">Rassemblement n°{{ gathering }}</h1>
		</div>

		<div class="row row-cols-2 row-cols-md-2 row-cols-lg-4 g-4 pt-5">
			{% for attendance in attendances %}
				<div class="col">
					<div class="img card-attendance-u" data-user-id="1">
						<div class="abs present"><img src="/images/arthur-delacour.png" class="card-img-top zoom" alt="..."></div>
						

						<div
							class="card-body"><h5 class="card-title text-center pt-1">{% if attendance.isPresent == 0  %}
							raison : {{ attendance.reason }}
						{% endif %}</h5>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	{% endblock %}

