{% extends 'base.html.twig' %}

{% block title %}Page des rassemblements
{% endblock %}

{% block body %}
	<div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2 display-4 text-white">Page des rassemblements</h1>
		</div>

		<div class="row row-cols-1 row-cols-md-2 g-4 pt-5">
			{% for gathering in gatherings %}
				<div class="col">
					<a href="/rassemblement/{{ gathering.id }}" class="btn btn-primary">
						<h3>Rassemblement nÂ°{{ gathering.id }}</h3>
						<h4>Du
							{{ gathering.gatheringDate|date('Y-m-d H:i:s') }}</h4>
					</a>
				</div>
			{% else %}
				<td colspan="9">Il n'y a aucun rassemblement !</td>
			{% endfor %}
		</div>
	</div>
{% endblock %}

