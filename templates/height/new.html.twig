{% block body %}
    <style>
        body {
            position: relative; /* Pour permettre le positionnement absolu du pseudo-élément */
        }

        body::before {
            content: ""; /* Obligatoire pour les pseudo-éléments */
            position: absolute; /* Positionnement absolu pour couvrir l'image de fond */
            top: 0;
            left: 0;
            width: 100%; /* Taille couvrant l'ensemble du corps */
            height: 100%;
            background-image: url('/images/fakebg.png'); /* Image de fond */
                        background-size: cover; /* Redimensionne l'image pour couvrir toute la zone */
            background-position: center; /* Centre l'image de fond */

            filter: blur(5px); /* Appliquer le flou */
            z-index: -1; /* Placer le pseudo-élément derrière le contenu */
        }
    </style>
    {{ include('height/_form.html.twig') }}

{% endblock %}
