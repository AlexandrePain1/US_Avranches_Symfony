{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <button class="btn">{{ button_label|default('Save') }}</button>
    <div class="form-group">
        <style>
            .profile-picture {
                border-radius: 100%;
                overflow: hidden;
                -webkit-box-sizing: content-box;
                -moz-box-sizing: content-box;
                box-sizing: content-box;	
            }
            .big-profile-picture {
                margin: 0 auto;		
                border: 5px solid #50597b;
                width: 150px;
                height: 150px;
            }
            .small-profile-picture {
                border: 2px solid #50597b;
                width: 40px;
                height: 40px;
            }
        </style>
        <br><br><br><br><br><br>
        <div class="profile-picture big-profile-picture">
            <img width="100%" alt="Anne Hathaway picture" src="/uploads/images/{{ app.user.getProfileImage() }}">
        </div>
        <div class="drop-container" id="dropContainer">
            <span class="drop-title">DÃ©posez le fichier ici</span>
            ou
            {{ form_widget(form.profile_image, { 'id': form.profile_image.vars.id, 'attr': {'class': 'form-control', 'onchange': 'handleFileSelect(event)'} }) }}
        </div>
        <p id="file-name" class="file-name">
            {% if form.profile_image.vars.value is not empty %}
                {{ form.profile_image.vars.value.name }}
            {% endif %}
        </p>
        <button class="buttonsend">
            <div class="svg-wrapper-1">
                <div class="svg-wrapper">
                <svg height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z" fill="currentColor"></path>
                </svg>
                </div>
            </div>
            <span>Enregistrer</span>
        </button>
    </div>


    {{ form_widget(form.username, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>
    {{ form_widget(form.password, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>
    {{ form_widget(form.date_naissance, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>
    {{ form_widget(form.first_name, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>
    {{ form_widget(form.last_name, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>
    {{ form_widget(form.weight, { 'attr': {'placeholder': '', 'class': 'input', 'data-placeholder': 'Nom d\'utilisateur', 'style' : 'color:dark;'} }) }}<br>


   
{{ form_end(form) }}
