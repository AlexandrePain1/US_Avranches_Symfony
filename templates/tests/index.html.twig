{% extends 'base.html.twig' %}

{% block title %}Liste des tests{% endblock %}

{% block body %}
        <link href="/css/tests.css" rel="stylesheet" />
	<div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2">Liste des tests</h1>
		</div>


		<table>
			{% for test in tests %}
				
			<div class="cards">
