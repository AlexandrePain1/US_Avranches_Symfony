{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/testsnew.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier un Test</h1>

        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.vma, 'VMA (0 à 30)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.vma, {'attr': {'class': 'form-input ' ~ (form.vma.vars.errors|length > 0 ? 'has-error' : '')}}) }}
            {% if form.vma.vars.errors|length > 0 %}
                <div class="error-message">{{ form_errors(form.vma) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.cooper, 'Cooper (MM:SS)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.cooper, {'attr': {'class': 'form-input ' ~ (form.cooper.vars.errors|length > 0 ? 'has-error' : '')}}) }}
            {% if form.cooper.vars.errors|length > 0 %}
                <div class="error-message">{{ form_errors(form.cooper) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_gauche, 'Jongle Gauche (0 à 50)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_gauche, {'attr': {'class': 'form-input ' ~ (form.jongle_gauche.vars.errors|length > 0 ? 'has-error' : '')}}) }}
            {% if form.jongle_gauche.vars.errors|length > 0 %}
                <div class="error-message">{{ form_errors(form.jongle_gauche) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_droit, 'Jongle Droit (0 à 50)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_droit, {'attr': {'class': 'form-input ' ~ (form.jongle_droit.vars.errors|length > 0 ? 'has-error' : '')}}) }}
            {% if form.jongle_droit.vars.errors|length > 0 %}
                <div class="error-message">{{ form_errors(form.jongle_droit) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_tete, 'Jongle Tête (0 à 30)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_tete, {'attr': {'class': 'form-input ' ~ (form.jongle_tete.vars.errors|length > 0 ? 'has-error' : '')}}) }}
            {% if form.jongle_tete.vars.errors|length > 0 %}
                <div class="error-message">{{ form_errors(form.jongle_tete) }}</div>
            {% endif %}
        </div>

        <br>
        <button type="submit" class="form-button">Save</button>
        
        {{ form_end(form) }}
    </div>
{% endblock %}
