        </div>

        <div class="form-group">
            {{ form_label(form.cooper, 'Cooper (MM:SS)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.cooper, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_gauche, 'Jongle Gauche', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_gauche, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_droit, 'Jongle Droit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_droit, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.jongle_tete, 'Jongle TÃªte', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.jongle_tete, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.date, 'Date du test', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-input form-date'}}) }}
        </div>

        <br>
        <button type="submit" class="form-button">Save</button>
        
        {{ form_end(form) }}
    </div>
{% endblock %}
