{% extends 'base.html.twig' %}

{% block title %}Liste Paliers{% endblock %}

{% block body %}
    <script src="https://kit.fontawesome.com/54e9e3700c.js" crossorigin="anonymous"></script>

    <div class="col-lg-8 mx-auto p-5 py-md-5">
        <div class="mt-3 text-center">
            <h1 class="h1 mb-2 display-4" style="color: white">Liste des catégories</h1>
        </div>

        <div class="rg-4 pt-5 table-responsive">
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Numéro</th>
                        <th>Nom</th>
                        <th>Objectif(s)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for palier in paliers %}
                        <tr>
                            <td class="align-middle">{{ palier.numero }}</td>
                            <td class="align-middle">{{ palier.name }}</td>
                            <td class="align-middle">{{ palier.objectif }}</td>
                            
                            <td class="align-middle">
                                <a href="{{ path('app_palier_edit', {'id': palier.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-pen"></i> Modifier
                                </a>
                                {{ include('palier/_delete_form.html.twig', {'palier': palier}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Il n'y a aucun palier !</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_palier_new', {'numero': 0}) }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un palier</a>
        </div>

        <div class="g-4 pt-5">
            <div class="col text-center" style="text-align: start;">
                <a href="/" class="btn btn-secondary">
                    <i class="fas fa-house"></i> Accueil
                </a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('ajouterPalier').addEventListener('click', function() {
            // Récupérer le numéro du dernier palier
            var dernierNumero = {{ paliers|last.numero ?? 0 }};
            
            // Incrémenter le numéro
            var nouveauNumero = dernierNumero + 1;

            // Mettre à jour le lien avec le nouveau numéro
            this.href = this.href + '?numero=' + nouveauNumero;
        });
    </script>
{% endblock %}
