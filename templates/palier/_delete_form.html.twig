<form method="post" action="{{ path('app_palier_delete', {'id': palier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le palier {{ palier.name }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ palier.id) }}">
    <button type="submit" class="btn btn-danger mt-2">
        <i class="fa-solid fa-trash-can"></i>
        Supprimer
    </button>
</form>
