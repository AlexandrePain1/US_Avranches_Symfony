{# palier/_form.html.twig #}
{{ form_start(form) }}
{{ form_widget(form._token) }}
    <div class="mb-3">
        {{ form_label(form.numero, formLabels.numero|default('Num√©ro')) }}
        {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.name, formLabels.name|default('Nom')) }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.objectif, formLabels.objectif|default('Objectif')) }}
        {{ form_widget(form.objectif, { 'attr': {'class': 'form-control'} }) }}
    </div>

    {# Utilisation du bouton Enregistrer dans le formulaire #}
    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Enregistrer
    </button>

     {# N'oubliez pas d'inclure le champ CSRF token #}

{{ form_end(form) }}