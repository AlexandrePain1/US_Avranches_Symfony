{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
    <script src="https://kit.fontawesome.com/54e9e3700c.js" crossorigin="anonymous"></script>

<div class="container-fluid pt-3">
    <div class="row removable">
        <div class="col-lg-12">
            <div class="card mb-4 h-100">
				<div class="mt-3 text-center">
					<h1 class="h1 mb-2 display-4">Liste des catégories</h1>
					<a href="{{ path('app_category_new') }}" class="btn btn-info"><i class="fa-solid fa-plus"></i> Ajouter une catégorie</a>
				</div>

				<div class="rg-4 pt-5 table-responsive">
					<table class="table table-striped table-hover text-center">
						<thead class="table-dark">
							<tr>
								<th>Catégorie</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for category in categories %}
								<tr>
									<td>{{ category.name }}</td>
									<td>
										<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
											<i class="fa-solid fa-pen"></i>
										</a>
										{{ include('category/_delete_form.html.twig') }}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">Il n'y a aucune catégorie !</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>	
		</div>
	</div>
</div>
{% endblock %}

