<body class='bg-dark'>
{% block body %}
    <link rel="icon" href="/img/logo_usa.ico">
    <link href="/css/login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <div class="row">
        <div class="col-md-10 col-lg-5 mx-auto d-flex flex-column justify-content-center vh-100">
            <form action="{{ path('app_register') }}" method="post" class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
                {{ form_row(registrationForm._token) }}
                <div align="center"><img src='/images/logo.png' width='30%'></div><br><br>
                
                {# Email field #}
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.email, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Adresse Email' } }) }}
                </div>

                {# Username field #}
                <!-- Repeat the above structure for other fields -->
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.username, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Nom d\'utilisateur' } }) }}
                </div>
                {# Username field #}
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.plainPassword, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Mot de passe' } }) }}
                </div>


                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.first_name, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Pr√©nom' } }) }}
                </div>
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.last_name, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Nom' } }) }}
                </div>
                <div class="form-floating mb-3">
                    Date Naissance : 
                    {{ form_row(registrationForm.date_naissance, { 'attr': { 'autocomplete': 'off', 'class': 'form-control', 'placeholder': 'Nom d\'utilisateur' } }) }}
                </div>
                <!-- Repeat the above structure for other fields -->

                <!-- Checkbox for terms and conditions -->
                <label class="checkbox-container">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'custom-checkbox', 'type': 'checkbox'} }) }}
                    <span class="checkmark"></span>
                    J'ai lu et j'accepte les <a href="{{ path('app_condiutil')}}">conditions d'utilisation</a>
                </label>
                <br><br>
                <button class="w-100 btn btn-lg btn-success" type="submit">S'inscrire</button>
            </form>
        </div>
    </div>
{% endblock %}
</body>
