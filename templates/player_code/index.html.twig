{% extends 'base.html.twig' %}


{% block body %}
<link rel="stylesheet" href="/css/PlayerCode.css">
    <div class="center-container">
        {% for player_code in player_codes %}
        <div class="container-fluid pt-3">
            <div class="row removable">
                <div class="col-lg-12">
                    <div class="card mb-4 h-100">
                        <div class="card-body p-3">
                            <div class="text-center">
                                <h1>Le code A2F actuel est : <u>{{ player_code.code }}</u></h1>
                                <br>
                                <a href="/playercode/{{ player_code.id }}/edit" class="btn btn-info">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {%endfor%}
    </div>
{% endblock %}
