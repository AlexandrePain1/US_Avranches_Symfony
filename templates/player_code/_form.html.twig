{{ form_start(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
     <link rel="stylesheet" href="/assets/css/form.css">
    {{ form_widget(form._token) }}

<div class="container-fluid pt-3">
            <div class="row removable">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h6 class="mb-0">Gestion de l'A2F</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form>
                                <h6 class="heading-small text-muted mb-4">Code</h6>
                                <div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="{{form.code.vars.id}}">Nouveau code :</label>
                                                {{ form_widget(form.code, { 'id': form.code.vars.id, 'attr': {'class': 'form-control'} }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
{{ form_end(form) }}
