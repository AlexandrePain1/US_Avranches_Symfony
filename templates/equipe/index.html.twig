{% extends 'base.html.twig' %}

{% block title %}Liste des équipes
{% endblock %}

{% block body %}
    <div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2 display-4" style="color: white">Liste des équipes</h1>
		</div>

		<div class="rg-4 pt-5 table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead class="table-dark">
					<tr>
						<th>Nom</th>
                        <th>Catégorie</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for equipe in equipes %}
						<tr>
							<td>{{ equipe.name }}</td>
                            <td>{{ equipe.getCategory().name }}</td>
							<td>
								<a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-warning">
									<i class="fa-solid fa-pen"></i> Modifier
								</a>
								{{ include('equipe/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Il n'y a aucune équipe !</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_equipe_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter une équipe</a>
		</div>
	</div>

{% endblock %}
